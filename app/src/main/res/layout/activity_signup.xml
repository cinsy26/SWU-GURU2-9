<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SignupActivity">


    <View
        android:id="@+id/logo"
        android:layout_width="211dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:layout_marginRight="102dp"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/signup_text"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="107dp"
        android:layout_marginRight="106dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/signup_text"
        android:textAppearance="@style/signup_text"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/inputname"
        android:layout_width="294dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="229dp"
        android:layout_marginRight="56dp"
        android:background="@drawable/password_edit_text_background"

        android:drawablePadding="10dp"
        android:ems="5"
        android:inputType="text"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/inputBR"
        android:layout_width="294dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="408dp"
        android:layout_marginRight="56dp"
        android:background="@drawable/password_edit_text_background"
        android:hint="YYMMDD"
        android:textColorHint="#EDEDED"
        android:drawablePadding="10dp"
        android:ems="5"
        android:inputType="datetime"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/BR_ET"
        android:layout_width="5dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="387dp"
        android:layout_marginRight="260dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="생년월일"
        android:textAlignment="textStart"
        android:textAppearance="@style/name"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputPW"
        android:layout_width="294dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="346dp"
        android:layout_marginRight="56dp"
        android:background="@drawable/password_edit_text_background"

        android:drawablePadding="10dp"
        android:ems="10"
        android:inputType="text|textPassword"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/passwordET"
        android:layout_width="5dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="326dp"
        android:layout_marginRight="274dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="비밀번호"
        android:textAlignment="textStart"
        android:textAppearance="@style/name"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputEM"
        android:layout_width="294dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="287dp"
        android:layout_marginRight="56dp"
        android:background="@drawable/password_edit_text_background"

        android:drawablePadding="10dp"
        android:ems="10"
        android:inputType="text|textEmailAddress"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/edit_EM"
        android:layout_width="5dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="266dp"
        android:layout_marginRight="284dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="이메일"
        android:textAlignment="textStart"
        android:textAppearance="@style/name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="5dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="207dp"
        android:layout_marginRight="295dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="이름"
        android:textAlignment="textStart"
        android:textAppearance="@style/name"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputPN"
        android:layout_width="294dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="472dp"
        android:layout_marginRight="56dp"
        android:background="@drawable/password_edit_text_background"
        android:hint="01012345678"
        android:textColorHint="#EDEDED"
        android:drawablePadding="10dp"
        android:ems="5"
        android:inputType="phone"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/PN_ET"
        android:layout_width="5dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="451dp"
        android:layout_marginRight="260dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="연락처"
        android:textAlignment="textStart"
        android:textAppearance="@style/name"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/joinButton"
        android:layout_width="284dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="544dp"
        android:layout_marginRight="42dp"
        android:background="@drawable/join_button_background"
        android:textAlignment="center"
        tools:ignore="SpeakableTextPresentCheck" />


</RelativeLayout>