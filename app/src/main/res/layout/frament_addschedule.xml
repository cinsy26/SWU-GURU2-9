<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <ImageView
        android:id="@+id/titleImageView"
        android:layout_width="211dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="102dp"
        android:src="@drawable/title_small_image" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backButton"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/backicon" />

    <ImageView
        android:id="@+id/medicineImageView"
        android:layout_width="46dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="352dp"
        android:layout_marginTop="505dp"
        app:srcCompat="@drawable/bottle" />

    <TextView
        android:id="@+id/scheduleTitle"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"

        android:layout_marginTop="93dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="513dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="-5sp"
        android:text="일정 등록"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scheduleTXT"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="159dp"
        android:gravity="top"
        android:text="제목"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/schedulecontent"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="205dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="406dp"
        android:background="@drawable/inputcontent"
        android:drawableLeft="@drawable/comment"
        android:drawablePadding="5dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/scheduledateTXT"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="273dp"
        android:gravity="top"
        android:text="날짜"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/scheduledate"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="305dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="306dp"
        android:background="@drawable/inputcontent"
        android:drawableLeft="@drawable/calendar3"
        android:drawablePadding="5dp"
        android:ems="8"
        android:inputType="datetime|date"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/scheduleDetailTXT"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="359dp"
        android:gravity="top"
        android:text="상세 내용"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="97dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="391dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="171dp"
        android:background="@drawable/inputcontent"
        android:drawableLeft="@drawable/pencil"
        android:drawablePadding="5dp"
        android:ems="30"
        android:inputType="text"
        android:textAlignment="center" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cha_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="312dp"
        android:layout_marginTop="146dp"
        android:background="@drawable/yellobuuton"
        android:text="등록"
        android:textAlignment="center"
        android:textStyle="bold" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        app:itemBackground="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_bottom_nav"
        app:itemIconSize="58dp"
        app:labelVisibilityMode="unlabeled"
        tools:ignore="MissingConstraints" />



