    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backButton"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/backicon" />

    <ImageView
        android:id="@+id/medicineImageView"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="559dp"
        app:srcCompat="@drawable/bottle" />

    <TextView
        android:id="@+id/scheduleTitle"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"

        android:layout_marginTop="93dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="513dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="-5sp"
        android:text="일정 등록"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scheduleTXT"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="179dp"
        android:gravity="top"
        android:text="제목"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/schedulecontent"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="216dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="395dp"
        android:background="@drawable/inputcontent"
        android:drawableLeft="@drawable/comment"
        android:drawablePadding="5dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/scheduledateTXT"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="292dp"
        android:gravity="top"
        android:text="날짜"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/scheduledate"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="329dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="282dp"
        android:background="@drawable/inputcontent"
        android:drawableLeft="@drawable/calendar3"
        android:drawablePadding="5dp"
        android:ems="8"
        android:inputType="datetime|date"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/scheduleDetailTXT"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="400dp"
        android:gravity="top"
        android:text="상세 내용"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="97dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="431dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="131dp"
        android:background="@drawable/inputcontent"
        android:drawableLeft="@drawable/pencil"
        android:drawablePadding="5dp"
        android:ems="30"
        android:inputType="text"
        android:textAlignment="center" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cha_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="575dp"
        android:background="@drawable/yellobuuton"
        android:text="등록"
        android:textStyle="bold"
        android:textAlignment="center" />




