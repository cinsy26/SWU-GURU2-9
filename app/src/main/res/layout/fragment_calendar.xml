<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ScheduleRegisterFragment" >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/schedulelistView"
        android:layout_width="408dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="480dp" />

    <EditText
        android:id="@+id/contextEditText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="390dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="-14dp"
        android:background="@drawable/inputcontent"
        android:drawableLeft="@drawable/comment"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="날짜를 먼저 선택하고, 일정을 등록하세요"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/newEntryEditText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="390dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="-14dp"
        android:background="@drawable/inputcontent"
        android:drawableLeft="@drawable/comment"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/sejonghospital"
        android:hint="새로운 일정 내용"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="#CFCACA"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contextEditText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerButton"
        android:layout_width="50dp"
        android:layout_height="22dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="330dp"
        android:layout_marginTop="440dp"
        android:layout_marginRight="10dp"

        android:fontFamily="@font/sejonghospitalbold"
        android:text="등록"
        android:background="@drawable/purplebar" />

    <TextView
        android:id="@+id/delupdateTextView"
        android:layout_width="165dp"
        android:layout_height="27dp"

        android:layout_alignParentTop="true"

        android:layout_marginLeft="5dp"
        android:layout_marginTop="450dp"
        android:fontFamily="@font/sejonghospital"
        android:text="목록 터치시 삭제/수정"
        android:textColor="#B2AFABAB"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/DateView"
        android:layout_width="165dp"
        android:layout_height="27dp"

        android:layout_alignParentTop="true"

        android:layout_marginLeft="5dp"
        android:layout_marginTop="628dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/sejonghospitalbold"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/titleImageView"
        android:layout_width="211dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="102dp"
        android:src="@drawable/title_small_image" />


    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp"
        />

    <TextView
        android:id="@+id/diaryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarView"
        android:layout_marginTop="-180dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:visibility="invisible" />


