<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".CalendarFragment" >

    <ImageView
        android:id="@+id/titleImageView"
        android:layout_width="211dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="102dp"
        android:src="@drawable/title_small_image" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="403dp"
        android:layout_height="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="70dp"
        tools:layout_editor_absoluteY="100dp" />

    <TextView
        android:id="@+id/diaryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarView"
        android:layout_marginTop="-180dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:visibility="invisible" />


    <TextView
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="291dp"
        android:layout_marginTop="377dp"
        android:text="일정 등록"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerPageButton"
        android:layout_width="24dp"
        android:layout_height="22dp"

        android:layout_marginLeft="374dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/plus" />

    <FrameLayout
        android:id="@+id/listToMove"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_marginTop="406dp"
        android:background="@drawable/layout"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/schedulelistButton"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="175dp"
            android:background="@drawable/drag"
            android:textAlignment="center"
            tools:ignore="SpeakableTextPresentCheck" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/schedulelistView"
            android:layout_width="379dp"
            android:layout_height="624dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="15dp" />


    </FrameLayout>


</RelativeLayout>