<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bookmark_list_background">

    <!-- 약 이름 -->
    <TextView
        android:id="@+id/medicineNameTextView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="32dp"
        android:text="약 이름"
        android:textColor="@color/black"
        android:fontFamily="@font/sejonghospitalbold"
        android:textSize="20sp"
        android:textStyle="bold" />


    <!-- 삭제 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/deleteButton"
        android:layout_width="95dp"
        android:layout_height="58dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/white_button_background"
        android:clipToOutline="true"
        android:text="삭제"
        android:fontFamily="@font/sejonghospitalbold"
        tools:ignore="SpeakableTextPresentCheck"
        android:visibility="visible"/>

    <!-- 약 복용량 -->
    <TextView
        android:id="@+id/medicineDoseTextView"
        android:layout_width="180dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="28dp"
        android:text="약 복용량"
        android:textColor="#789BC7"
        android:fontFamily="@font/sejonghospital"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- 약 아이콘 -->
    <ImageView
        android:id="@+id/medicineImageView"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="31dp"
        app:srcCompat="@drawable/bookmark_medicine_image" />

</androidx.cardview.widget.CardView>