<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mypage_background"
    tools:context=".MypageProfileEditFragment">

    <!-- 프로필 사진 (클릭 시 사진 변경) -->
    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="113dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="113dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="107dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="399dp"
        android:src="@drawable/profile_background" />

    <!-- 저장 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveButton"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="291dp"
        android:layout_marginTop="498dp"
        android:background="@drawable/save_button_background"
        tools:ignore="SpeakableTextPresentCheck" />

    <!-- 정보 타이틀 글씨 -->
    <ImageView
        android:id="@+id/myInfoTitleImageView"
        android:layout_width="59dp"
        android:layout_height="209dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="297dp"
        android:src="@drawable/my_info_title_image" />

    <!-- 이메일 정보 (사용자 이메일로 text 변경) -->
    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="318dp"
        android:text="swuswu@swu.ac.kr"
        android:textColor="#7E7E7E"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- 이름 정보 (사용자 이름으로 text 변경) -->
    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="239dp"
        android:ems="10"
        android:inputType="text"
        android:text="김슈니"
        android:textColor="#7E7E7E"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- 전화번호 정보 (사용자 전화번호로 text 변경) -->
    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="175dp"
        android:ems="10"
        android:inputType="phone"
        android:text="010-0000-0000"
        android:textColor="#7E7E7E"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- 생년월일 정보 (사용자 생년월일으로 text 변경) -->
    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="108dp"
        android:ems="10"
        android:inputType="date"
        android:text="1961.05.20"
        android:textColor="#7E7E7E"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>