<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mypage_background"
    tools:context=".MypageFragment">

    <!-- 타이틀 로고 이미지 -->
    <ImageView
        android:id="@+id/titleImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="74dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="561dp"
        android:src="@drawable/title_small_image" />

    <!-- 프로필 사진 (클릭 시 사진 변경) -->
    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="113dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="113dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="107dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="399dp"
        android:src="@drawable/profile_background" />

    <!-- 프로필 수정 버튼 (클릭 시 프로필 수정 화면으로 이동) -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/editProfileButton"
        android:layout_width="143.26dp"
        android:layout_height="38.75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="310dp"
        android:background="@drawable/edit_profile_button_background"
        tools:ignore="SpeakableTextPresentCheck" />

    <!-- 즐겨찾기 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bookmarkButton"
        android:layout_width="133.19dp"
        android:layout_height="38.75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="371dp"
        android:background="@drawable/bookmark_button_background"
        tools:ignore="SpeakableTextPresentCheck" />

    <!-- 검색 기록 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/searchHistoryButton"
        android:layout_width="150dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="441dp"
        android:background="@drawable/search_history_button_background"
        tools:ignore="SpeakableTextPresentCheck" />

    <!-- 로그아웃 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logoutButton"
        android:layout_width="132.4dp"
        android:layout_height="38.75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="495dp"
        android:background="@drawable/logout_button_background"
        tools:ignore="SpeakableTextPresentCheck" />
</RelativeLayout>