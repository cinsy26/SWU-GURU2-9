<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- FrameLayout이 위로 이동 -->
    <objectAnimator
        android:propertyName="translationY"
        android:valueFrom="0"
        android:valueTo="-500"
        android:duration="1000" />

    <!-- FrameLayout의 높이를 화면에 맞게 확장 -->
    <objectAnimator
        android:propertyName="layoutParams"
        android:valueType="intType"
        android:valueFrom="100"
        android:valueTo="500"
        android:duration="1000">
        <propertyValuesHolder
            android:propertyName="layout_height"
            android:valueType="intType"
            android:valueFrom="100dp"
            android:valueTo="500dp" />
    </objectAnimator>

    <!-- 리사이클러뷰의 높이를 조금만 확장 -->
    <objectAnimator
        android:propertyName="scaleY"
        android:valueFrom="1.0"
        android:valueTo="1.2"
        android:duration="1000" />

    <!-- 버튼의 크기를 고정 -->
    <objectAnimator
        android:propertyName="scaleY"
        android:valueFrom="1.0"
        android:valueTo="1.0"
        android:duration="1000" />
</set>